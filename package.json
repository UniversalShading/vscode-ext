{
    "name": "usl",
    "displayName": "Universal Shading Language (USL)",
    "description": "Syntax highlighting and IntelliSense for Universal Shading Language",
        "version": "0.1.0",
    "publisher": "UniversalShading",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/UniversalShading"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "usl",
        "universal shading",
        "shader",
        "graphics",
        "gpu"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:usl"
    ],
    "contributes": {
        "languages": [{
            "id": "usl",
            "aliases": ["Universal Shading Language", "usl", "us"],
            "extensions": [".usl", ".us"],
            "configuration": "./language-configuration.json",
            "icon": {
                "light": "./images/icon.png",
                "dark": "./images/icon.png"
            }
        }],
        "grammars": [{
            "language": "usl",
            "scopeName": "source.usl",
            "path": "./syntaxes/usl.tmLanguage.json"
        }],
        "iconThemes": [
            {
                "id": "usl-icons",
                "label": "USL File Icons",
                "path": "./fileicons/usl-icon-theme.json"
            }
        ],
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "[*]": {
                    "textMateRules": [
                        {
                            "scope": "entity.name.function.decorator.usl",
                            "settings": {
                                "foreground": "#C586C0",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "variable.other.member.usl",
                            "settings": {
                                "foreground": "#C16655"
                            }
                        },
                        {
                            "scope": "keyword.operator.arrow.usl",
                            "settings": {
                                "foreground": "#C16655"
                            }
                        },
                        {
                            "scope": "punctuation.definition.attribute.usl",
                            "settings": {
                                "foreground": "#C586C0"
                            }
                        },
                        {
                            "scope": "variable.parameter.attribute.usl",
                            "settings": {
                                "foreground": "#4EC9B0"
                            }
                        }
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "eslint": "^8.28.0",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "typescript": "^4.9.3",
        "@vscode/test-electron": "^2.2.0"
    }
}